---
const navItems = [
  { text: 'Inicio', href: '#hero' },
  { text: 'Experiencia', href: '#experiencia' },
  { text: 'Proyectos', href: '#proyectos' },
  { text: 'Habilidades', href: '#habilidades' },
  { text: 'Sobre mí', href: '#sobre-mi' },
  { text: 'Contacto', href: '#contacto' },
];
---

<header
  class="fixed top-0 left-0 right-0 z-50 py-4 dark:bg-darker/90 backdrop-blur-sm"
>
  <div class="container px-4 mx-auto">
    <nav class="flex items-center justify-between">
      <a href="/" class="text-lg font-bold text-gray-800 dark:text-white"
        ><span class="text-accent">Angel</span> Contreras</a
      >

      <!-- Mobile Menu Button -->
      <button
        id="menu-toggle"
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center justify-center w-10 h-10 p-2 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>

      <!-- Desktop Navigation -->
      <ul class="hidden space-x-6 md:flex">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-800 transition-colors duration-300 dark:text-light hover:text-accent"
              >
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- <select name="" id="" class="text-white">
        <option value="spanish">Español</option>
        <option value="english">English</option>
      </select> -->

      <!-- Theme Toggle -->
      <!-- <button class="hidden ml-4 md:block">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-light">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
        </svg>
      </button> -->
    </nav>
  </div>

  <!-- Mobile Navigation -->
  <div
    id="mobile-menu"
    class="fixed inset-0 items-center justify-center hidden bg-darker/95 md:hidden"
  >
    <button
      id="close-menu"
      class="absolute p-2 cursor-pointer top-4 right-4 text-light hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 rounded-2xl"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <ul
      class="flex flex-col p-4 pt-8 mt-4 font-medium border border-gray-100 rounded-lg md:p-0 bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
    >
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block px-3 py-2 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent mobile-link"
            >
              {item.text}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuToggle = document.getElementById('menu-toggle');
  const closeMenu = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileLinks = document.querySelectorAll('.mobile-link');

  menuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.remove('hidden');
  });

  closeMenu?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
  });

  mobileLinks.forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
