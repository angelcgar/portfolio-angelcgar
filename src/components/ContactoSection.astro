---
import { profileLinks } from '@/constants';
---

<section id="contacto" class="py-20 dark:bg-darker">
  <div class="container px-4 mx-auto">
    <h2 class="mb-12 text-3xl font-bold text-center">Contáctame</h2>

    <div class="grid max-w-5xl grid-cols-1 gap-10 mx-auto lg:grid-cols-2">
      <!-- Contact Form -->
      <div>
        <h3 class="mb-6 text-xl font-semibold">Envíame un mensaje</h3>
        <p class="mb-6 dark:text-light/80">
          Completa el formulario y te responderé lo antes posible.
        </p>

        <!-- Formulario de contacto -->
        <form class="space-y-4" id="contactForm">
          <div>
            <label
              for="nombre"
              class="block mb-2 text-sm text-gray-800 dark:text-light/80"
              >Nombre</label
            >
            <input
              type="text"
              id="nombre"
              class="w-full p-3 border rounded-md dark:bg-dark border-dark/60 focus:outline-none focus:ring-2 focus:ring-accent/50 dark:text-light"
              placeholder="Tu nombre"
              required
              name="nombre"
            />
          </div>

          <div>
            <label
              for="email"
              class="block mb-2 text-sm text-gray-800 dark:text-light/80"
              >Email</label
            >
            <input
              type="email"
              id="email"
              class="w-full p-3 border rounded-md dark:bg-dark border-dark/60 focus:outline-none focus:ring-2 focus:ring-accent/50 dark:text-light"
              placeholder="Tu dirección de email"
              required
              name="email"
            />
          </div>

          <!-- asunto -->
          <div>
            <label
              for="subject"
              class="block mb-2 text-sm text-gray-800 dark:text-light/80"
              >Asunto</label
            >
            <input
              type="text"
              id="subject"
              class="w-full p-3 border rounded-md dark:bg-dark border-dark/60 focus:outline-none focus:ring-2 focus:ring-accent/50 dark:text-light"
              placeholder="Asunto del mensaje"
              name="subject"
            />
          </div>

          <div>
            <label
              for="mensaje"
              class="block mb-2 text-sm text-gray-800 dark:text-light/80"
              >Mensaje</label
            >
            <textarea
              id="mensaje"
              class="w-full p-3 border rounded-md dark:bg-dark border-dark/60 focus:outline-none focus:ring-2 focus:ring-accent/50 dark:text-light"
              placeholder="Escribe tu mensaje aquí..."
              required
              name="mensaje"></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-4 py-3 font-medium transition-colors duration-300 rounded-md cursor-pointer bg-accent hover:bg-accent/90 text-darker"
          >
            Enviar mensaje
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="lg:pl-10">
        <h3 class="mb-6 text-xl font-semibold">Información de contacto</h3>

        <div class="space-y-6">
          <div class="flex items-start">
            <div
              class="flex items-center justify-center flex-shrink-0 w-10 h-10 mr-4 rounded-full dark:bg-dark/80"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-5 h-5 dark:text-accent"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
            </div>
            <div>
              <h4 class="font-medium dark:text-light">Email</h4>
              <div class="flex items-center gap-2">
                <a
                  href={`mailto:${profileLinks.email}`}
                  class="transition-colors duration-300 dark:text-light/70 hover:text-accent"
                  >{profileLinks.email}</a
                >
                <button
                  id="copy-email"
                  class="p-1 transition-colors duration-300 rounded-full cursor-pointer dark:bg-dark/80 hover:bg-accent/20"
                  title="Copiar al portapapeles"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-5 h-5 dark:text-light dark:hover:text-accent"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M16.5 8.25V6a2.25 2.25 0 00-2.25-2.25h-9A2.25 2.25 0 003 6v12a2.25 2.25 0 002.25 2.25h9A2.25 2.25 0 0016.5 18v-2.25m0-7.5L21 12m0 0l-4.5 4.5M21 12h-9"
                    ></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <div class="flex items-start">
            <div
              class="flex items-center justify-center flex-shrink-0 w-10 h-10 mr-4 rounded-full dark:bg-dark/80"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-5 h-5 dark:text-accent"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                ></path>
              </svg>
            </div>
            <div>
              <h4 class="font-medium dark:text-light">LinkedIn</h4>
              <a
                href={profileLinks.linkedin}
                target="_blank"
                class="transition-colors duration-300 dark:text-light/70 hover:text-accent"
                >linkedin.com/in/{profileLinks.name}</a
              >
            </div>
          </div>
        </div>

        <div class="mt-10">
          <h4 class="mb-4 font-medium dark:text-light">Sígueme en</h4>
          <div class="flex space-x-4">
            <a
              href={profileLinks.twitter}
              aria-label="ver mas en X"
              target="_blank"
              class="flex items-center justify-center w-10 h-10 transition-colors duration-300 rounded-full dark:bg-dark/80 hover:bg-accent/20"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                fill="currentColor"
                class="dark:text-accent"
                viewBox="0 0 16 16"
              >
                <path
                  d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
                ></path>
              </svg>
            </a>
            <a
              href={profileLinks.github}
              aria-label="ver mas en GitHub"
              target="_blank"
              class="flex items-center justify-center w-10 h-10 transition-colors duration-300 rounded-full dark:bg-dark/80 hover:bg-accent/20"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                fill="currentColor"
                class="dark:text-accent"
                viewBox="0 0 16 16"
              >
                <path
                  d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                ></path>
              </svg>
            </a>
            <a
              href={profileLinks.facebook}
              aria-label="ver más en Facebook"
              target="_blank"
              class="flex items-center justify-center w-10 h-10 transition-colors duration-300 rounded-full dark:bg-dark/80 hover:bg-accent/20"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                fill="currentColor"
                class="dark:text-accent"
                viewBox="0 0 24 24"
              >
                <path
                  d="M22.675 0h-21.35C.595 0 0 .592 0 1.326v21.348C0 23.408.595 24 1.325 24h11.495v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.797.143v3.24l-1.918.001c-1.504 0-1.797.715-1.797 1.763v2.313h3.587l-.467 3.622h-3.12V24h6.116C23.406 24 24 23.408 24 22.674V1.326C24 .592 23.406 0 22.675 0"
                ></path>
              </svg>
            </a>
          </div>
        </div>

        <div class="mt-10">
          <div class="p-4 rounded-md bg-accent/10 dark:bg-dark/60">
            <h4 class="mb-2 text-lg font-semibold dark:text-light">
              ¿Te interesa aprender más?
            </h4>
            <p class="mb-3 dark:text-light/80">
              También escribo sobre desarrollo web, programación y tecnología en
              mi blog personal.
            </p>
            <a
              href={profileLinks.blog}
              target="_blank"
              rel="noopener"
              class="inline-block px-4 py-2 font-medium transition-colors duration-300 rounded-md bg-accent text-darker hover:bg-accent/90"
            >
              Leer mi blog
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { showNotification } from '@/lib/notifications';

  const formElement = document.querySelector('#contactForm') as HTMLFormElement;

  formElement.addEventListener('submit', async (e) => {
    e.preventDefault(); // evitar redirección

    const formData = new FormData(formElement);

    const data = {
      name: formData.get('nombre'),
      email: formData.get('email'),
      subject: formData.get('subject'),
      message: formData.get('mensaje'),
    };

    console.log({ data });

    try {
      const res = await fetch('/api/send-email', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await res.json();

      console.log(result);

      // todo: mostrar mensajes en notificaciones
      if (result.success) {
        showNotification('✅ Mensaje enviado con éxito');
        formElement.reset();
      } else {
        showNotification('❌ Error al enviar el mensaje');
      }
    } catch (err) {
      showNotification('❌ Error de red o del servidor');
      console.error(err);
    }
  });
</script>

<script>
  import { profileLinks } from '@/constants';

  // Seleccionamos el botón de copiar
  const copyEmailButton = document.getElementById('copy-email');

  // Correo electrónico a copiar
  const email = profileLinks.email;

  // Evento para copiar al portapapeles
  copyEmailButton?.addEventListener('click', () => {
    navigator.clipboard
      .writeText(email)
      .then(() => {
        console.log('Correo electrónico copiado al portapapeles');
      })
      .catch((err) => {
        console.error('Error al copiar el correo:', err);
      });
  });
</script>

<style>
  textarea {
    field-sizing: content;
  }
</style>
