---
const experiencias = [
  {
    puesto: "Desarrollador Frontend",
    empresa: "TechSolutions",
    periodo: "Marzo 2023 - Presente",
    descripcion: "Desarrollo de interfaces de usuario para aplicaciones web utilizando React y TypeScript. Colaboración con el equipo de diseño para implementar mockups y prototipos. Optimización del rendimiento y mantenimiento de código existente."
  },
  {
    puesto: "Desarrollador Web Junior",
    empresa: "DigitalCreative",
    periodo: "Enero 2022 - Febrero 2023",
    descripcion: "Creación de sitios web responsive utilizando HTML, CSS y JavaScript. Implementación de funcionalidades dinámicas con jQuery y optimización para dispositivos móviles. Mantenimiento y actualización de sitios web existentes."
  },
  {
    puesto: "Desarrollador Web",
    empresa: "FreelanceWork",
    periodo: "Septiembre 2021 - Enero 2022",
    descripcion: "Desarrollo de sitios web para pequeñas empresas y emprendedores. Creación de landing pages, sitios corporativos y tiendas online con WordPress. Implementación de diseños personalizados y funcionalidades específicas según requerimientos del cliente."
  }
];
---

<section id="experiencia" class="py-20 bg-darker">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">
      Experiencia <span class="text-accent">Laboral</span>
    </h2>
    
    <div class="max-w-3xl mx-auto">
      {experiencias.map((exp, index) => (
        <div class="relative pl-8 pb-12 last:pb-0">
          {/* Timeline line */}
          {index < experiencias.length - 1 && (
            <div class="absolute left-3 top-3 bottom-0 w-0.5 bg-accent/30"></div>
          )}
          
          {/* Timeline dot */}
          <div class="absolute left-0 top-3 h-6 w-6 rounded-full bg-dark border-2 border-accent"></div>
          
          <div class="bg-dark/50 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
            <div class="flex flex-col md:flex-row md:items-center justify-between mb-3">
              <h3 class="text-xl font-bold text-accent">{exp.puesto}</h3>
              <span class="text-light/60 text-sm">{exp.periodo}</span>
            </div>
            <h4 class="text-lg font-medium mb-2">{exp.empresa}</h4>
            <p class="text-light/80">{exp.descripcion}</p>
            
            {/* Skills tags */}
            <div class="mt-4 flex flex-wrap gap-2">
              {exp.puesto.includes("Frontend") && (
                <>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">React</span>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">TypeScript</span>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">TailwindCSS</span>
                </>
              )}
              {exp.puesto.includes("Junior") && (
                <>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">HTML</span>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">CSS</span>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">JavaScript</span>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">jQuery</span>
                </>
              )}
              {exp.empresa.includes("Freelance") && (
                <>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">HTML</span>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">CSS</span>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">JavaScript</span>
                  <span class="text-xs bg-darker py-1 px-2 rounded text-primary">WordPress</span>
                </>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>