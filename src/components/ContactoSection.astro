              >
            </a>
          </div>
        </div>

        <div class="mt-10">
          <div class="rounded-md bg-accent/10 dark:bg-dark/60">
            <h4 class="mb-2 text-lg font-semibold dark:text-light">
              ¿Te interesa aprender más?
            </h4>
            <p class="mb-3 dark:text-light/80">
              También escribo sobre desarrollo web, programación y tecnología en
              mi blog personal.
            </p>
            <a
              href={profileLinks.blog}
              target="_blank"
              rel="noopener"
              class="btn-contact inline-block px-4 py-2 font-medium transition-colors duration-300 rounded-md bg-accent text-darker hover:bg-accent/90"
            >
              Leer mi blog
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { showNotification } from '@/lib/notifications';

  const formElement = document.querySelector('#contactForm') as HTMLFormElement;

  formElement.addEventListener('submit', async (e) => {
    e.preventDefault(); // evitar redirección

    const formData = new FormData(formElement);

    const data = {
      name: formData.get('nombre'),
      email: formData.get('email'),
      subject: formData.get('subject'),
      message: formData.get('mensaje'),
    };

    console.log({ data });

    try {
      const res = await fetch('/api/send-email', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await res.json();

      console.log(result);

      // todo: mostrar mensajes en notificaciones
      if (result.success) {
        showNotification('✅ Mensaje enviado con éxito');
        formElement.reset();
      } else {
        showNotification('❌ Error al enviar el mensaje');
      }
    } catch (err) {
      showNotification('❌ Error de red o del servidor');
      console.error(err);
    }
  });
</script>

<script>
  import { profileLinks } from '@/constants';

  // Seleccionamos el botón de copiar
  const copyEmailButton = document.getElementById('copy-email');

  // Correo electrónico a copiar
  const email = profileLinks.email;

  // Evento para copiar al portapapeles
  copyEmailButton?.addEventListener('click', () => {
    // Todo para estos logs a notificaciones
    navigator.clipboard
      .writeText(email)
      .then(() => {
        console.log('Correo electrónico copiado al portapapeles');
      })
      .catch((err) => {
        console.error('Error al copiar el correo:', err);
      });
  });
</script>

<style>
  textarea {
    field-sizing: content;
  }

  textarea:focus {
    outline: none;
    box-shadow: 0 0 0 2px var(--color-accent);
  }

  #copy-email:hover {
    color: var(--color-accent-hover);
  }

  .red-social:hover {
    background-color: var(--color-accent-hover);
  }
</style>
