---
// import Notification from "./Notification.astro";
import {
  curriculumVitaeUrl,
  linkedinProfileUrl,
  emailAddress,
} from "@/constants";
---

<section id="hero" class="relative pt-32 pb-20 bg-dark">
  <div class="container flex flex-col items-center justify-between px-4 mx-auto md:flex-row">
    <div class="mb-10 md:w-1/2 md:mb-0">
      <h1 class="mb-4 text-4xl font-bold md:text-5xl">
        Hola, soy <span class="text-accent">Angel Contreras</span>
      </h1>
      <p class="max-w-lg mb-6 text-lg text-light/80">
        Desarrollador Web Junior apasionado por crear experiencias digitales
        atractivas y funcionales.
        <a
          href={linkedinProfileUrl}
          target="_blank"
          rel="noopener"
          class="inline-block transition md:justify-center md:hover:scale-105"
        >
          <span
            class="relative inline-flex overflow-hidden rounded-full p-[1px]"
          >
            <span
              class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#51E4B8_0%,#21554E_50%,#51E4B8_100%)]"
            ></span>
            <span
              class="items-center justify-center w-full px-3 py-1 text-sm text-green-800 bg-green-100 rounded-full cursor-pointer dark:bg-gray-800 dark:text-white/80 backdrop-blur-3xl whitespace-nowrap"
            >
              Disponible para trabajar
            </span>
          </span>
        </a>
      </p>

      <a
        href={`mailto:${emailAddress}`}
        class="inline-block px-6 py-2 font-medium transition-colors duration-300 rounded-md bg-accent hover:bg-accent/90 text-darker"
      >
        Contáctame
      </a>
      <a
        href={linkedinProfileUrl}
        class="inline-block px-6 py-2 font-medium transition-colors duration-300 rounded-md bg-accent hover:bg-accent/90 text-darker"
      >
        LinkedIn
      </a>
      <a
        href={curriculumVitaeUrl}
        class="inline-block px-6 py-2 font-medium transition-colors duration-300 rounded-md bg-accent hover:bg-accent/90 text-darker"
      >
        Mas sobre mí
      </a>

      <!-- <Notification /> -->
    </div>
    <div class="flex justify-center md:w-1/3">
      <div class="relative w-64 h-64 overflow-hidden border-4 rounded-full border-accent/30">
        <img
          src="/img/avatar1.webp"
          alt="Angel Contreras"
          class="object-cover w-full h-full"
        />
      </div>
    </div>
  </div>
</section>
