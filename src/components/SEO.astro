---
interface Props {
  description?: string;
}

const { description } = Astro.props;
---

<meta
  name="description"
  content={description || "Portfolio profesional de Angel Contreras, desarrollador web especializado en React, Next.js y tecnologías frontend modernas."}
/>
<meta name="author" content="Angel Contreras" />
<meta
  name="keywords"
  content="desarrollador web, frontend, React, Next.js, portfolio"
/>
<meta name="creator" content="Angel Contreras" />
<meta property="og:type" content="website" />
<meta property="og:locale" content="es_ES" />
<meta property="og:url" content="https://juanperez.dev" />
<meta
  property="og:title"
  content="Portfolio de Angel Contreras | Desarrollador Web"
/>
<meta
  property="og:description"
  content="Portfolio profesional de Angel Contreras, desarrollador web especializado en React, Next.js y tecnologías frontend modernas."
/>
<meta property="og:site_name" content="Portfolio de Angel Contreras" />

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
