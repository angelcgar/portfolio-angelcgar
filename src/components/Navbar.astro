---
const navItems = [
  { text: 'Inicio', href: '#hero' },
  { text: 'Experiencia', href: '#experiencia' },
  { text: 'Proyectos', href: '#proyectos' },
  { text: 'Habilidades', href: '#habilidades' },
  { text: 'Sobre mí', href: '#sobre-mi' },
  { text: 'Contacto', href: '#contacto' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-darker/90 backdrop-blur-sm py-4">
  <div class="container mx-auto px-4">
    <nav class="flex justify-between items-center">
      <a href="/" class="text-accent font-bold text-lg">Juan Pérez</a>
      
      <!-- Mobile Menu Button -->
      <button id="menu-toggle" class="md:hidden text-light">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
      
      <!-- Desktop Navigation -->
      <ul class="hidden md:flex space-x-6">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href} 
              class="text-light hover:text-accent transition-colors duration-300"
            >
              {item.text}
            </a>
          </li>
        ))}
      </ul>
      
      <!-- Theme Toggle -->
      <button class="hidden md:block ml-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-light">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
        </svg>
      </button>
    </nav>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="fixed inset-0 bg-darker/95 flex items-center justify-center hidden">
    <button id="close-menu" class="absolute top-4 right-4 text-light">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <ul class="flex flex-col space-y-6 items-center">
      {navItems.map((item) => (
        <li>
          <a 
            href={item.href} 
            class="text-light text-xl hover:text-accent transition-colors duration-300 mobile-link"
          >
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuToggle = document.getElementById('menu-toggle');
  const closeMenu = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileLinks = document.querySelectorAll('.mobile-link');

  menuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.remove('hidden');
  });

  closeMenu?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
  });

  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>