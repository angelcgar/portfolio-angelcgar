---
import '../styles/global.css';

import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta
      name="description"
      content="Portfolio profesional de Juan Pérez, desarrollador web junior especializado en React, Next.js y tecnologías frontend modernas."
    />
    <meta name="author" content="Juan Pérez" />
    <meta
      name="keywords"
      content="desarrollador web, frontend, React, Next.js, portfolio"
    />
    <meta name="creator" content="Juan Pérez" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:url" content="https://juanperez.dev" />
    <meta
      property="og:title"
      content="Portfolio de Juan Pérez | Desarrollador Web Junior"
    />
    <meta
      property="og:description"
      content="Portfolio profesional de Juan Pérez, desarrollador web junior especializado en React, Next.js y tecnologías frontend modernas."
    />
    <meta property="og:site_name" content="Portfolio de Juan Pérez" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-dark text-light">
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html {
    font-family: "Inter", sans-serif;
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  main {
    flex: 1;
  }
</style>
