---
import { FULL_NAME } from '@/constants';

interface Props {
  lang: 'es' | 'en'
}

const { lang } = Astro.props;

import { profileLinks } from '@/constants';

const text = {
  es: {
    title: 'Hola, soy',
    subtitle:
      'Desarrollador web con enfoque en interfaces limpias, funcionales y centradas en el usuario. Me especializo en transformar ideas en experiencias digitales intuitivas.',
    presentacion: 'Desarrollador web con enfoque en interfaces limpias, funcionales y centradas en el usuario. Me especializo en transformar ideas en experiencias digitales intuitivas.'
  },
  en: {
    title: 'Hi, I am',
    subtitle:
      'Web developer focused on clean, functional, and user-centered interfaces. I specialize in transforming ideas into intuitive digital experiences.',
    presentacion: 'Web developer focused on clean, functional, and user-centered interfaces. I specialize in transforming ideas into intuitive digital experiences.'
  },
};

---

<section id="hero" class="relative pt-32 pb-20 dark:bg-dark">
  <div
    class="container flex flex-col items-center justify-between px-4 mx-auto md:flex-row"
  >
    <div class="mb-10 md:w-1/2 md:mb-0 flex-1/2">
      <h1
        class="text-h1 mb-4"
      >
        {text[lang].title} <span class="text-accent">{FULL_NAME}</span>
      </h1>
      <p
        class="text-body max-w-full mb-6 text-lg text-balance"
      >
        {text[lang].presentacion}
        <a
          href={profileLinks.linkedin}
          target="_blank"
          rel="noopener"
          class="inline-block transition md:justify-center md:hover:scale-105"
        >
          <span
            class="relative inline-flex overflow-hidden rounded-full p-[1px]"
          >
            <span
              class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#51E4B8_0%,#1E3A3A_50%,#3B8C88_100%)]"
            ></span>
            <span
              class="items-center justify-center w-full px-3 py-1 text-sm text-green-800 bg-green-100 rounded-full cursor-pointer dark:bg-gray-800 dark:text-white/80 backdrop-blur-3xl whitespace-nowrap"
            >
              Disponible para trabajar
            </span>
          </span>
        </a>
      </p>

      <div class="flex flex-col items-center gap-8 md:flex-row">
        <!-- <a
          href={`mailto:${profileLinks.email}`}
          class="text-link"
        >
          Cont√°ctame
        </a> -->
        <a
          href={profileLinks.linkedin}
          class="text-link"
        >
          LinkedIn
        </a>
        <a
          href={profileLinks.curriculumVitae}
          class="text-link"
        >
          Ver CV
        </a>
      </div>
    </div>
    <div class="flex justify-center md:w-1/3 flex-1/2">
      <div
        class="border-accentu relative w-96 h-96 overflow-hidden border-4 rounded-full"
      >
        <img
          src="/img/avatar1.webp"
          alt="Angel Contreras"
          class="object-cover w-full h-full object-top"
        />
      </div>
    </div>
  </div>
</section>
