  {
    nombre: 'HTML',
    color: '#E44D26',
  },
  {
    nombre: 'CSS',
    color: '#1572B6',
  },
  {
    nombre: 'JavaScript',
    color: '#F7DF1E',
  },
  {
    nombre: 'React',
    color: '#61DAFB',
  },
  {
    nombre: 'Next.Js',
    color: '#ffffff',
  },
  {
    nombre: 'Git',
    color: '#F05032',
  },
  {
    nombre: 'TypeScript',
    color: '#3178C6',
  },
  {
    nombre: 'Node.js',
    color: '#339933',
  },
  {
    nombre: 'Tailwind CSS',
    color: '#38B2AC',
  },
  {
    nombre: 'MongoDB',
    color: '#47A248',
  },
  {
    nombre: 'PostgreSQL',
    color: '#336791',
  },
  {
    nombre: 'Docker',
    color: '#2496ED',
  },
  {
    nombre: 'GraphQL',
    color: '#E10098',
  },
  {
    nombre: 'Python',
    color: '#3776AB',
  },
  {
    nombre: 'Sass',
    color: '#CC6699',
  },
  {
    nombre: 'Figma',
    color: '#F24E1E',
  },
];
---

<section id="habilidades" class="py-20 dark:bg-darker">
  <div class="container px-4 mx-auto">
    <h2 class="mb-12 text-3xl font-bold text-center">
      Mis <span class="text-accent">Habilidades</span>
    </h2>

    <div class="flex flex-wrap justify-center max-w-3xl gap-8 mx-auto">
      {
        habilidades.map((skill) => (
          <div
            class="flex flex-col items-center justify-center px-5 py-3 transition-transform duration-300 rounded-lg select-none dark:bg-dark/60 hover:scale-110 cursor-crosshair skill-card"
            style={`--skill-color: ${skill.color}`}
          >
            <img
              src={`/svg/${skill.nombre.toLowerCase()}.svg`}
              class="object-contain w-11 h-11"
              alt={skill.nombre}
              aria-label={skill.nombre}
              loading="lazy"
              decoding="async"
            />
            <span class="mt-2 font-medium text-gray-800 dark:text-light">
              {skill.nombre}
            </span>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .skill-card:hover {
    box-shadow: 0 0 15px var(--skill-color, #10b981);
  }
</style>
